<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="347dp"
        android:layout_height="182dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="95dp"
        android:paddingTop="30dp"
        android:paddingBottom="60dp"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#110101"
        android:textSize="20sp"
        android:textStyle="bold"
        app:fontFamily="monospace" />

    <Button
        android:id="@+id/SelAppBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#C9B11414"
        android:text="@string/SelAppBut"
        android:textColor="#FDFDFD" />

    <Button
        android:id="@+id/LimitBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#C9B11414"
        android:text="@string/LimitBut"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/AvisoBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#C9B11414"
        android:text="@string/AvisosBut"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/InfoBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C9B11414"
        android:text="@string/InfoBut"
        android:textColor="#FFFFFF" />

</LinearLayout>